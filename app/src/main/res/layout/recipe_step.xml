<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin_size"
        card_view:cardCornerRadius="@dimen/card_view_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/card_view_padding">

            <TextView
                android:id="@+id/recipe_step_number"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/step_number_weight"
                android:textAlignment="center"
                android:textSize="@dimen/global_text_size"
                tools:text="1" />

            <TextView
                android:id="@+id/recipe_step_description"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/step_description_weight"
                android:textAlignment="textStart"
                android:textSize="@dimen/global_text_size"
                tools:text="Get ready to bake" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>