<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ingredient_margin_size"
        card_view:cardCornerRadius="@dimen/ingredient_radius_of_card">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ingredient_vertical_padding"
            android:paddingStart="@dimen/ingredient_horizontal_padding"
            android:paddingEnd="@dimen/ingredient_horizontal_padding">

            <TextView
                android:id="@+id/units_of_measure"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/small_text_size"
                tools:text="3 Cups" />

            <TextView
                android:id="@+id/ingredient"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="@dimen/small_text_size"
                android:textAllCaps="@bool/should_ingredients_be_capitalized"
                tools:text="Flour" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>