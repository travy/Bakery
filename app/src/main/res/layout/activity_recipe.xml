<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h1_text_size"
                android:textAllCaps="@bool/should_headings_be_capitalized"
                tools:text="Some Recipe" />

            <!--  Ingredients  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2_text_size"
                android:textAllCaps="@bool/should_headings_be_capitalized"
                android:text="@string/title_ingredients_section" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipe_ingredients_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--  Ingredients  -->

            <!--  Steps  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_steps_section"
                android:textSize="@dimen/h2_text_size"
                android:textAllCaps="@bool/should_headings_be_capitalized"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipe_steps_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--  Steps  -->

        </LinearLayout>

    </ScrollView>

</FrameLayout>
