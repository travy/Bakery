<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <fragment
        android:id="@+id/fragment_recipe_steps_list"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:name="com.travistorres.bakery.fragments.RecipeStepsListFragment" />

    <fragment
        android:id="@+id/fragment_recipe_step_item"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:name="com.travistorres.bakery.fragments.RecipeStepsItemFragment" />

</LinearLayout>
