<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin_size"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="@dimen/card_view_radius">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/card_view_padding">

            <ImageView
                android:id="@+id/recipe_thumbnail"
                android:layout_height="@dimen/thumbnail_height"
                android:layout_weight="@integer/thumbnail_weight"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:src="@drawable/ic_cupcake" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="@integer/recipe_detail_weight"
                android:layout_width="@dimen/one_to_one_layout_width"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="@dimen/h1_text_size"
                    tools:text="Chocolate Chip Cookies" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/enlarged_text_section_weight"
                        android:layout_width="@dimen/one_to_one_layout_width"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/title_ingredients_section"
                            android:textAlignment="center"
                            android:textSize="@dimen/h2_text_size" />

                        <TextView
                            android:id="@+id/ingredients_count"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textSize="@dimen/enlarged_number_text_size"
                            tools:text="48" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/enlarged_text_section_weight"
                        android:layout_width="@dimen/one_to_one_layout_width"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/title_servings_section"
                            android:textAlignment="center"
                            android:textSize="@dimen/h2_text_size" />

                        <TextView
                            android:id="@+id/servings_count"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textSize="@dimen/enlarged_number_text_size"
                            tools:text="10" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>